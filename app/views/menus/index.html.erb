<h1>Menus</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ingredients</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @menus.each do |menu| %>
      <tr>
        <td><strong><%= menu.name %></strong></td>
        <td><%= menu.ingredients %></td>
        <td>
          <%= link_to 'Edit', edit_menu_path(menu), class: 'btn btn-secondary btn-sm me-2' %>
          <%= link_to 'Delete', menu, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add New Menu', new_menu_path, class: 'btn btn-primary' %>
