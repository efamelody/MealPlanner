<h1>Add New Menu</h1>

<%= form_with(model: @menu, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= form.label :ingredients, 'Ingredients (comma separated)' %><br>
    <%= form.text_area :ingredients, required: true %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Menu', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back to Menus', menus_path, class: 'btn btn-secondary' %>
