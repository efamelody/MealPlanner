<h1>Ingredients for the Week</h1>

<%= form_with url: update_grocery_lists_path, method: :patch, local: true do %>
  <ul>
    <% @grocery_items.each do |item| %>
      <li>
        <label>
          <%= check_box_tag 'grocery_items[]', item.name, item.checked %>
          <%= item.name %>
        </label>
      </li>
    <% end %>
  </ul>

  <%= submit_tag 'Update Grocery List', class: 'btn btn-primary' %>
<% end %>

<% if flash[:grocery_list_updated] %>
  <div class="alert alert-info mt-4" role="alert">
    Grocery list updated! You can now view the final list.
    <%= link_to 'View Final Grocery List', view_list_grocery_lists_path, class: 'btn btn-success mt-2' %>
  </div>
<% end %>


