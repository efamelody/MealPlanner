<h1>Ingredients for the Week</h1>

<%= form_with url: update_grocery_lists_path, method: :patch, local: true do %>
  <ul>
    <% @grocery_items.each do |item| %>
      <li>
        <label>
          <%= check_box_tag 'grocery_items[]', item.name, item.checked %>
          <%= item.name %>
        </label>
      </li>
    <% end %>
  </ul>

  <%= submit_tag 'Update Grocery List', class: 'btn btn-primary' %>
<% end %>

<div style="margin-top: 20px;">
  <%= link_to 'Back to Meal Planner', meal_plans_path, class: 'btn btn-secondary' %>
</div>

<div style="margin-top: 20px;">
  <%= link_to 'View Final Grocery List', view_list_grocery_lists_path, class: 'btn btn-success' %>
</div>

<hr>

<h2>Grocery List</h2>
<ul>
  <% @grocery_items.reject(&:checked).each do |item| %>
    <li><%= item.name %></li>
  <% end %>
</ul>
